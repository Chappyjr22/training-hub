{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ],
    "noEmit": true
  },
  "include": [
    "src",
    "pages",
    "next-env.d.ts"
  ]
}
